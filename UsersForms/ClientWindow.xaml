<Window x:Class="ExamTest2.MyForms.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamTest2.MyForms"
        mc:Ignorable="d"
        Title="Окно клиента" Height="450" Width="800" FontFamily="comic Sans ms">
    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBlock Margin="5"  Name="tbUserName"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <Label Margin="10">
                ClientWindow
            </Label>
            <Button Margin="10" Name="bntExitClick" Click="bntExitClick_Click">
                Назад
            </Button>
        </StackPanel>
    </Grid>
</Window>
